<div>
	<legend>New User</legend>

	<form action="/users/newUser" method="post">
		<div class="form-group"> 
			<label for="user-username">Username</label>
			<input type="text" name="username" class="form-control" id="user-username" placeholder="Your username...">
		</div>

		<div class="form-group">
			<label for="user-password">Password</label>
			<input type="password" name="password" class="form-control" id="user-password" placeholder="Your password...">
		</div>

		<div class="form-group">
			<label for="user-password-confirmed">Confirm Password</label>
			<input type="password" name="password_confirmation" class="form-control" id="user-password-confirmed" placeholder="Confirm your password...">
		</div>

		<div class="form-group">
			<label for="user-email">Email</label>
			<input type="text" name="email" class="form-control" id="user-email" placeholder="Enter the email address...">
		</div>

		<div class="text-right">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
	</form>

</div>
