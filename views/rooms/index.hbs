<div class="row">
	<div class="col">
		<div class="text-left">
			<h2>Join Rooms</h2>
			<a href="/rooms/newRoom" class="btn btn-primary btn-lg" role="button">Create Room</a>
		</div>
	</div>
</div>

<div class="row">
	<div class="col">
		<ul>
			{{#each rooms as |room|}}
			<li>
				<a href="/rooms/{{room.id}}">{{room.topic}}</a> | <a href="/rooms/{{room.id}}/edit">edit</a>
			</li>
			{{/each}}
		</ul>
	</div>
</div>