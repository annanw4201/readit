<div>
	<h2>Room: {{room.topic}}</h2>
	<h6>Posts:</h6>
</div>

<div class="row justify-content-center">
	<div class="col-8">

		{{#each posts as |post|}}
		<div class="card mb-3">
			<div class="card-body">
				<h3 class="card-title text-center">{{post.subject}}</h3>
				<p>{{post.body}}</p>
				<div class="text-right">
					<span class="points-span">{{post.points}} points </span>
					<div class="btn-group btn-group=sm">
						<form action="/rooms/{{post.room}}/posts/{{post.id}}" method="post" class="inline-form">
							<input type="hidden" name="points" id="post-points" value="1">
							<button type="submit" class="btn btn-success">+</button>
						</form>

						<form action="/rooms/{{post.room}}/posts/{{post.id}}" method="post" class="inline-form">
							<input type="hidden" name="points" id="post-points" value="-1">
							<button type="submit" class="btn btn-danger">-</button>
						</form>
					</div>
				</div>
			</div>
			<div class="card-footer text-muted">
				<ol>
					{{#each post.comments as |comment|}}
					<li>{{comment.content}}</li>
					{{/each}}
					<a href="/rooms/{{../room.id}}/posts/{{post.id}}/comments/newComment">
						<button class="btn btn-primary" type="submit">Comment</button>
					</a>
				</ol>
			</div>
		</div>
		{{/each}}

	</div>
</div>

<div><a href="/rooms/{{room.id}}/posts/newPost">New Post</a></div>
